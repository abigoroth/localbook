<h1>Conversation</h1>
<p>
  <div class="">
    <div class="">
     <% @conversations.each do |conversation| %>
     <% if conversation.sender_id == current_user.id || conversation.receiver_id == current_user.id %>
      <% if conversation.sender_id == current_user.id %>
        <% receiver = User.find(conversation.receiver_id) %>
      <% else %>
        <% receiver = User.find(conversation.sender_id) %>
      <% end %>
      <%= link_to receiver.email,   conversation_messages_path(conversation)%>
     <% end %>
    <% end %>
    </div>
   </div>
  </div>

  <div>
 <h3>All Users</h3>
  <div class="">
   <% @users.each do |user| %>
    <% if user.id != current_user.id %>
     <div class="">
   <%= user.email %>
   <%= link_to 'Message me!', conversations_path(sender_id: current_user.id, receiver_id: user.id), method: 'post'%>
 </div>
  <% end %>
 <% end %>
 </div>
</div>
</p>
